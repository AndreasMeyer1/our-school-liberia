extends ../layouts/default

block content
	.intro-container
		.container
			img.logo.visible-xs.visible-sm(src='/images/logo@2x.png')
			img.logo.visible-md.visible-lg(src='/images/logo@2x.png')
			img.heroimage.hidden-xs(src='/images/hero@2x.png')
			img.heroimage.visible-xs(src='/images/hero@2x.png')
			h1.visible-xs OUR SCHOOL LIBERIA
			h1.visible-sm OUR SCHOOL LIBERIA
			h1.visible-md OUR SCHOOL LIBERIA
			h1.visible-lg OUR SCHOOL LIBERIA
			a(href="/donate").donatenow.visible-xs #{__('intro.donatenow')}
			a(href="/donate").donatenow.visible-sm #{__('intro.donatenow')}
			a(href="/donate").donatenow.visible-lg.visible-md #{__('intro.donatenow')}
		.aboutnow-prev.visible-xs.visible-sm
			h2 #{__('intro.aboutourschool')}
			p.aboutnow-prev-p #{__('intro.aboutourschoolprev')}
				br
				br
				<a href="#">READ MORE</a>
		.aboutnow-prev.visible-md.visible-lg
			h2 #{__('intro.aboutourschool')}
			p.aboutnow-prev-p #{__('intro.aboutourschoolprev')}
				br
				br
				<a href="/about">#{__('intro.readmore')} #[img.read-more-arrow(src='/images/arrow@2x.png')]</a>
